{
  "compilerOptions": {
    "target": "ES2020", // Target ECMAScript 2020 (or higher)
    "module": "CommonJS", // Use CommonJS module system
    "strict": true, // Enable strict type checking
    "esModuleInterop": true, // Ensure compatibility with CommonJS
    "outDir": "dist", // Output directory for compiled files
    "rootDir": "src", // Root directory for TypeScript files
    "types": ["@figma/plugin-typings"], // Add Figma typings here
    "skipLibCheck": true // Skip checking of declaration files
  },
  "include": ["src/**/*.ts"], // Include TypeScript files in the src directory
  "exclude": ["node_modules"] // Exclude node_modules folder
}
